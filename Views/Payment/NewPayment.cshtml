@{
    ViewData["Title"] = "Register Payment";

}


<html>

<head>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
</head>

<body>
    @if (@TempData["message"] != null)
    {
        <div class="alertbox">
            @TempData["message"]
        </div>

    }
    <br />
    <div class="MainMessage">
        <h4>Register Payment</h4>
    </div>

    <div class="main_form">

        <form method="POST" asp-controller="Payment" asp-action="RegisterPayment">
            <h4>User Registration:   Please enter Payment details below.</h4>

            <br />
            
            <label for="inputPassword5" class="form-label">Payment Type</label>
            <input Name="PaymentType" class="form-control form-control-sm" type="text" aria-label=".form-control-sm example" required>
                        
            <br />
            <button type="submit" class="btn btn-primary">Submit</button>
            
        </form>

    </div>



</body>
</html>
